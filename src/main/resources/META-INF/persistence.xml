<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="historyPU" transaction-type="JTA">
        <jta-data-source>jdbc/historyDS</jta-data-source>

        <class>pl.edu.pg.eti.kask.historyapi.historicalfigure.entity.HistoricalFigure</class>
        <class>pl.edu.pg.eti.kask.historyapi.note.entity.Note</class>

        <shared-cache-mode>NONE</shared-cache-mode>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

            <!-- Wyłączenie cache L2 - zapobiega problemom z odświeżaniem danych -->
            <property name="eclipselink.cache.shared.default" value="false"/>

            <!-- Automatyczne odświeżanie encji po operacjach -->
            <property name="eclipselink.refresh" value="true"/>
        </properties>
    </persistence-unit>

</persistence>

