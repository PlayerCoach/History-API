<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="historyPU" transaction-type="JTA">
        <jta-data-source>jdbc/historyDS</jta-data-source>

        <class>pl.edu.pg.eti.kask.historyapi.historicalfigure.entity.HistoricalFigure</class>
        <class>pl.edu.pg.eti.kask.historyapi.note.entity.Note</class>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>

</persistence>

