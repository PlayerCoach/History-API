<?xml version="1.0" encoding="UTF-8"?>
<!--Open Liberty documentation does not use schema in examples.-->
<server description="Jakarta EE example server">
    <featureManager>
        <feature>servlet-6.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>faces-4.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>persistence-3.1</feature>
        <feature>jdbc-4.3</feature>
    </featureManager>

    <dataSource id="H2DataSource" jndiName="jdbc/historyDS">
        <jdbcDriver libraryRef="h2Lib"/>
        <properties url="jdbc:h2:mem:historydb" user="sa" password=""/>
    </dataSource>

    <library id="h2Lib">
        <fileset dir="${shared.resource.dir}/h2" includes="*.jar"/>
    </library>
</server>
